extends ../layouts/layout

block content
    .container.pt-5
        .row.justify-content-end
            .col-md-2
                form(method='post' action='/authors/delete')
                    input(type='hidden' value=author.id name='id')
                    .d-flex.justify-content-end
                        button.btn.btn-outline-danger(type='submit') Удалить
        .row
            .col-12
                .jumbotron.bg-light.rounded.p-5
                    h2.display-4 #{author.lastname} #{author.name} #{author.midname}
                    p.lead #{author.bio}
                    if author.books.length
                      p.display-6.mt-5 Книги автора
                      .row.row-cols-1.row-cols-md-2.g-4.pt-3
                        each book in author.books
                            .col
                                .card.h-100
                                    .card-body
                                        h4.card-title #{book.title}
                                        p #{book.description}
                                    .card-footer.bg-transparent
                                        a.btn.btn-outline-success(href=`/books/one/${book.id}`) Просмотр






